<diagram mlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
	<include><filename>shared/text_style_definitions.xml</filename></include>
	<include><filename>shared/shape_style_definitions.xml</filename></include>

	<default>
		<hmin>1.0</hmin>
		<wmin>1.0</wmin>
		<margin>0</margin>
		<padding>0</padding>
		<packing>horizontal</packing>
		<text_style>normal</text_style>
		<shape_style>outline</shape_style>
		<debug-whitespace>true</debug-whitespace>
	</default>
	<h>10</h>
	<margin>0.5</margin>
	<label><text>xreqd.mixed.xml            C1 aligned beneath B1, C2 to the right of C1</text></label>
	<enclosure>
		<id>diagram</id>
		<label/>
		<x><relative><offset>0.1</offset></relative></x>
		<y><abs>0.1</abs></y>
		<h>6</h>
		<enclosure>
			<id>A</id>
			<y><abs>1</abs></y>
			<h>5</h>
			<label/>
			<enclosure>
				<id>B</id>
				<label/>
				<x><relative><offset>5</offset></relative></x>
				<y><abs>2</abs></y>
				<h>1.2</h>
				<enclosure>
					<id>B1</id>
					<x><relative><offset>5</offset></relative></x>
					<y><abs>2.1</abs></y>
					<h>1</h>
					<w>2.3</w>
					<label/>
				</enclosure>
				<enclosure>
					<id>B2</id>
					<x><at><right/><of>B1</of></at></x>
					<y><abs>2.1</abs></y>
					<h>1</h>
					<label/>
				</enclosure>
			</enclosure>
			<enclosure>
				<id>C</id>
				<x><relative><offset>5</offset></relative></x>
				<y><abs>4</abs> </y>
				<h>1.2</h>
				<enclosure>
					<id>C0</id>
					<y><abs>4.1</abs></y>
					<h>1</h>
					<label/>
				</enclosure>
				<enclosure>
					<id>C1</id>
					<x><at><centre/><of>B1</of></at></x>
					<y><abs>4.1</abs></y>
					<h>1</h>
					<label/>
				</enclosure>
				<enclosure>
					<id>C2</id>
					<x><at><right/><of>C1</of></at></x>
					<y><abs>4.1</abs></y>
					<h>1</h>
					<label/>
				</enclosure>
			</enclosure>
		</enclosure>
	</enclosure>
</diagram>
